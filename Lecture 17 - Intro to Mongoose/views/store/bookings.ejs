<%- include('../partials/head') %>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="font-sans bg-gray-50">
	<%- include('../partials/nav') %>
	<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<h2 class="text-3xl font-semibold text-gray-900 mb-6">Your Bookings</h2>
		
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<!-- Sample booking card (repeat as needed) -->
			<div class="bg-white rounded-lg shadow overflow-hidden">
				<div class="h-48 bg-gray-200 relative">
					<img src="https://placehold.co/600x400" alt="Property" class="w-full h-full object-cover">
				</div>
				<div class="p-4">
					<div class="flex justify-between items-center">
						<h3 class="text-lg font-medium text-gray-900">Beach House</h3>
						<span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">Confirmed</span>
					</div>
					<p class="text-gray-500 text-sm mt-1">Miami, Florida</p>
					<div class="mt-4 flex justify-between items-center">
						<div class="text-sm text-gray-700">
							<p>Check-in: <span class="font-medium">Jun 12</span></p>
							<p>Check-out: <span class="font-medium">Jun 18</span></p>
						</div>
						<span class="text-lg font-semibold">$1,200</span>
					</div>
				</div>
			</div>

			<!-- Add more booking cards as needed -->
		</div>
		
		<!-- Empty state when no bookings -->
		<div class="text-center py-12 hidden">
			<p class="text-xl text-gray-600">You don't have any bookings yet</p>
			<button class="mt-4 px-4 py-2 bg-rose-500 text-white font-medium rounded-lg hover:bg-rose-600">
				Explore places to stay
			</button>
		</div>
	</section>
</body>
</html>