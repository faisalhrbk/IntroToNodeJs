<%- include('../partials/head') %>
	</head>
	<body >
			<%- include('../partials/nav') %>
		<section class="bg-gray-50 min-h-screen font-sans">
	<main
			class="container mx-auto bg-white shadow-md rounded-xl p-8 mt-8 text-center max-w-4xl"
		>
			<h2
				class="text-4xl text-pink-800 font-semibold mb-6 hover:bg-indigo-50 hover:rounded-xl transition duration-200 ease-in-out p-3"
			>
				Here are our Registered Homes!
			</h2>
			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-4">
				<% registeredHomes.forEach((home)=>{ %>
				<div class="bg-pink-100 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 ease-in-out transform hover:-translate-y-1 w-full mx-auto mb-4">
					<img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-40 object-cover">
					<div class="p-4">
						<h3 class="text-xl font-bold text-gray-800 mb-2 truncate"><%= home.houseName %></h3>
						<div class="space-y-1">
							<p class="text-base text-gray-600">
								<span class="font-semibold">Price:</span> 
								<span class="text-green-600">$<%= home.price %></span>
							</p>
							<p class="text-base text-gray-600">
								<span class="font-semibold">Location:</span> 
								<span class="text-indigo-600 truncate"><%= home.location %></span>
							</p>
							<p class="text-base text-gray-600"></p>
								<span class="font-semibold">Rating:</span> 
								<span class="text-yellow-500"><%= home.rating %>/5</span>
							</p>
						</div>
					</div>
				</div>
				<% }); %>
			</div>
			
		</main>
		</section>
		
	</body>
</html>
