<%- include('../partials/head') %>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
</head>
<body class="font-sans bg-gray-50">
	<%- include('../partials/nav') %>
	<section class="max-w-4xl mx-auto px-4 py-12 min-h-screen flex flex-col">
		<header class="mb-10 text-center">
			<h1 class="text-3xl font-bold text-gray-900 mb-3"><%= editing ? 'Edit': 'Register' %> your space on Airbnb</h1>
			<p class="text-gray-600">Share your home with travelers and earn extra income</p>
		</header>
		
		<main class="bg-white rounded-xl shadow-lg p-8 w-full max-w-2xl mx-auto">
			<form action=" /host/<%= editing ? 'edit-home': 'add-home' %>" method="post" class="space-y-6">
				<div>
					<label for="houseName" class="block text-sm font-medium text-gray-700 mb-1">Property name</label>
					<input value="<%= editing ? home.houseName : '' %>"
						type="text"
						id="houseName"
						name="houseName"
						placeholder="Give your place a catchy title"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
					/>
				</div>
				
				<div>
					<label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price per night</label>
					<div class="relative">
						<span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-500">$</span>
						<input  value="<%= editing ? home.price : '' %>"
							type="text"
							id="price"
							name="price"
							placeholder="0"
							class="w-full px-4 py-3 pl-8 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
						/>
					</div>
				</div>
				
				<div>
					<label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
					<input  value="<%= editing ? home.location : '' %>"
						type="text"
						id="location"
						name="location"
						placeholder="City, Country"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
					/>
				</div>
				
				<div>
					<label for="rating" class="block text-sm font-medium text-gray-700 mb-1">Rating (1-5)</label>
					<input   value="<%= editing ? home.rating : '' %>"
						type="text"
						id="rating"
						name="rating"
						placeholder="Initial rating for your property"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
					/>
				</div>
				
				<div>
					<label for="photoUrl" class="block text-sm font-medium text-gray-700 mb-1">Photo URL</label>
					<input  value="<%= editing ? home.photoUrl : '' %>"
						type="text"
						id="photoUrl"
						name="photoUrl"
						placeholder="Link to your property's best photo"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
					/>
				</div>
				
				<button
					type="submit"
					class="w-full bg-gradient-to-r from-rose-500 to-rose-600 text-white py-3 px-6 rounded-lg font-medium hover:from-rose-600 hover:to-rose-700 transition duration-200 ease-in-out cursor-pointer shadow-md"
				>
					<%= editing ? 'Update Home' : 'Register Home' %>
				</button>
			</form>
		</main>
	</section>
	
	<footer class="footer sm:footer-horizontal bg-neutral text-neutral-content p-10">
		<!-- Footer content here -->
	</footer>
</body>
</html>
