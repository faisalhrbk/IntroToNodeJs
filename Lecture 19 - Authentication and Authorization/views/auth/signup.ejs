<%- include('../partials/head') %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
</head>
<body>
    <%- include('../partials/nav') %>
    <section class="font-sans bg-gray-50 px-4 pt-5 flex flex-col">
        <header class="mb-10 text-center">
            <h1 class="text-3xl font-bold text-gray-900 mb-3">Create an Account</h1>
            <p class="text-gray-600">Join Airbnb to start booking and listing properties</p>
        </header>
        
        <main class="bg-white rounded-xl shadow-lg p-8 w-full max-w-md mx-auto">
            <form action="/signup" method="POST" class="space-y-6">
         
                <div class="grid grid-cols-2 gap-4">
 <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <div class="col-span-2 bg-red-50 border border-red-200 rounded-lg p-3 mb-4">
        <ul class="list-disc pl-5 space-y-1">
        <% errors.forEach(error => { %>
            <li class="text-red-600 text-sm"><%= error.msg %></li>
        <% }); %>
        </ul>
    </div>
    <% } %>

                    <div>
                        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                        <input 
                            type="text"
                            id="firstName"
                            name="firstName"
                            placeholder="John"
                            value="<%=  oldInput.firstName ? oldInput.firstName : '' %>"
                            class="w-full px-4 py-3 border <%= errors && errors.firstName ? 'border-red-500' : 'border-gray-300' %> rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
                            required
                        />
                        <% if (errors && errors.firstName) { %>
                            <p class="text-red-500 text-xs mt-1"><%= errors.firstName %></p>
                        <% } %>
                    </div>
                    
                    <div>
                        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                        <input 
                            type="text"
                            id="lastName"
                            name="lastName"
                            placeholder="Doe"
                            value="<%=  oldInput.lastName ? oldInput.lastName : '' %>"
                            class="w-full px-4 py-3 border <%= errors && errors.lastName ? 'border-red-500' : 'border-gray-300' %> rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
                            required
                        />
                        <% if (errors && errors.lastName) { %>
                            <p class="text-red-500 text-xs mt-1"><%= errors.lastName %></p>
                        <% } %>
                    </div>
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                    <input 
                        type="email"
                        id="email"
                        name="email"
                        placeholder="your@email.com"
                         value="<%=  oldInput.email ? oldInput.email : '' %>"
                        class="w-full px-4 py-3 border <%= errors && errors.email ? 'border-red-500' : 'border-gray-300' %> rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
                        required
                    />
                    <% if (errors.email) { %>
                        <p class="text-red-500 text-xs mt-1"><%= errors.email %></p>
                    <% } %>
                </div>
                
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input   value="<%=  oldInput.password ? oldInput.password : '' %>"
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Create a password"
                        class="w-full px-4 py-3 border <%= errors.password ? 'border-red-500' : 'border-gray-300' %> rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
                        required
                    />
                    <% if (errors && errors.password) { %>
                        <p class="text-red-500 text-xs mt-1"><%= errors.password %></p>
                    <% } %>
                </div>

                <div>
                    <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                    <input   value="<%=  oldInput.confirmPassword ? oldInput.confirmPassword : '' %>"
                        type="password"
                        id="confirmPassword"
                        name="confirmPassword"
                        placeholder="Confirm your password"
                        class="w-full px-4 py-3 border <%= errors && errors.confirmPassword ? 'border-red-500' : 'border-gray-300' %> rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
                        required
                    />
                    <% if (errors && errors.confirmPassword) { %>
                        <p class="text-red-500 text-xs mt-1"><%= errors.confirmPassword %></p>
                    <% } %>
                </div>

                <div>
                    <label for="userType" class="block text-sm font-medium text-gray-700 mb-1">Register as:</label>
                    <select 
                        id="userType" 
                        name="userType"
                        class="w-full px-4 py-3 border <%= errors && errors.userType ? 'border-red-500' : 'border-gray-300' %> rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500"
                    >
                    <option value="" >select type:</option>
                        <option value="guest" <%= oldInput.userType === 'guest' ? 'selected' : '' %>>Guest</option>
                        <option value="host" <%= oldInput.userType === 'host' ? 'selected' : '' %>>Host</option>
                    </select>
                    <% if (errors && errors.userType) { %>
                        <p class="text-red-500 text-xs mt-1"><%= errors.userType %></p>
                    <% } %>
                </div>
                
                <div class="flex items-center">
                    <input id="terms" name="terms" type="checkbox" class="h-4 w-4 text-rose-600 focus:ring-rose-500 border-gray-300 rounded" required >
                    <label for="terms" class="ml-2 block text-sm text-gray-700">I agree to the <a href="/terms" class="text-rose-600 hover:text-rose-500">Terms and Conditions</a></label>
                    <% if (errors && errors.terms) { %>
                        <p class="text-red-500 text-xs ml-2"><%= errors.terms %></p>
                    <% } %>
                </div>
                
                <button
                    type="submit"
                    class="w-full bg-gradient-to-r from-rose-500 to-rose-600 text-white py-3 px-6 rounded-lg font-medium hover:from-rose-600 hover:to-rose-700 transition duration-200 ease-in-out cursor-pointer shadow-md"
                >
                    Sign Up
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Already have an account? 
                    <a href="/login" class="text-rose-600 hover:text-rose-500 font-medium">Log in</a>
                </p>
            </div>
        </main>
    </section>
</body>
